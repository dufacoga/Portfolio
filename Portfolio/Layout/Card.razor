<a class="card @GroupClass" href="@Urlcard" target="_blank">
    @ChildContent
</a>

@code {
    // Allows passing custom CSS class names to style the card
    [Parameter] public string GroupClass { get; set; }

    // Enables any nested content (text, components, etc.) to be rendered inside the card
    [Parameter] public RenderFragment ChildContent { get; set; }

    [Parameter] public string Urlcard { get; set; }
}
