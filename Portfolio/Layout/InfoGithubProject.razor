<div class="infogithubprojectcard">
	<!-- Project header with icon and name -->
	<div class="infogithubprojecttitle">
		<i class="fas fa-link"></i>
		<h3>@Name</h3>
	</div>

	<!-- Short text description of the GitHub project -->
	<div class="infogithubprojectdescription">@Description</div>

	<!-- Container for stars, forks, and language -->
	<div class="infogithubprojectdata">
		<div class="infogithubprojectitems">

			<!-- Star count block -->
			<div class="infogithubprojectstars">
				<i class="fas fa-star"></i>
				<span>@Stars</span>
			</div>

			<!-- Fork count block -->
			<div class="infogithubprojectforks">
				<i class="fas fa-code-branch"></i>
				<span>@Forks</span>
			</div>

		</div>

		<!-- Programming language with colored dot -->
		<div class="infogithubprojectlenguaje">
			<i style="color:@LanguageColor">●</i>
			<span>@Language</span>
		</div>
	</div>
</div>

@code {
	// Repository name
	[Parameter] public string Name { get; set; }

	// Description of the project
	[Parameter] public string Description { get; set; }

	// GitHub star count
	[Parameter] public int Stars { get; set; }

	// GitHub fork count
	[Parameter] public int Forks { get; set; }

	// Programming language (used to determine color)
	[Parameter] public string Language { get; set; }

	// Logic to assign a color code based on programming language
	private string LanguageColor => Language switch
	{
		"HTML" => "#e34c26",
		"JavaScript" => "#f1e05a",
		"TypeScript" => "#2b7489",
		"C#" => "#178600",
		"CSS" => "#563d7c",
		_ => "#cccccc"
	};
}