<!-- Profile photo section -->
<div class="profile-item profile-image-wrapper">
	<img src="@ImageUrl" alt="Profile photo" />
</div>

<!-- Profile title and subtitle -->
<div class="profile-item profile-info">
	<h1>@Title</h1>
	<span>@Subtitle</span>
</div>

<!-- Resume download button -->
<div class="profile-item profile-actions">
	<a class="download-button" href="@ResumeUrl" download target="_blank">Download Resume</a>
</div>

@code {
	// Title text, usually the user's full name
	[Parameter] public string Title { get; set; }

	// Subtitle text, typically the user's role or short bio
	[Parameter] public string Subtitle { get; set; }

	// Image URL for the profile photo
	[Parameter] public string ImageUrl { get; set; }

	// Resume URL for the download button
	[Parameter] public string ResumeUrl { get; set; }
}
